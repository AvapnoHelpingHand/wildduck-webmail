<div class="row">
    <div class="col-md-12">
        <h1><span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Filters</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Filter
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#if filters}}
                    {{#each filters}}
                        <tr>
                            <th>
                                {{index}}
                            </th>
                            <td>


                                <div class="pull-right">
                                    <form method="post" id="delete-{{id}}" action="/account/filters/delete" onsubmit="return confirm('Are you sure?')">
                                        <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                        <input type="hidden" name="id" value="{{id}}" />

                                        <a href="/account/filters/edit?id={{id}}" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>

                                        <button type="submit" form="delete-{{id}}" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
                                    </form>
                                </div>

                                Query: <strong>{{query}}</strong><br /> Action: {{action}}
                            </td>
                        </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="3">
                            There are no filters created
                        </td>
                    </tr>
                {{/if}}
            </tbody>
        </table>

        <p>
            <strong><a href="/account/filters/create"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create new filter</a></strong>
        </p>

    </div>
</div>
